# ─────────────────────────────────────────────
# Dynamic Interview Tracker – Environment Variables
# Copy this file to .env and fill in your values
# ─────────────────────────────────────────────

# Server
PORT=5000
NODE_ENV=development

# MySQL Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=interview_tracker
DB_USER=root
DB_PASSWORD=your_mysql_password

# JWT
JWT_SECRET=change_this_to_a_long_random_secret_string_at_least_64_chars
JWT_EXPIRES_IN=7d

# CORS – set to your frontend origin
CLIENT_URL=http://localhost:5173
